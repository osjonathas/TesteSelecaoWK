unit einterface.pedidovenda;

interface
uses Data.DB;
  type
  iPedidoVenda = interface
    ['{B2737524-40A7-4108-A701-D5D977EDE79C}']
    function Codigo(Value: integer) :iPedidoVenda; overload;
    function Codigo :integer; overload;

    function Login(Value: String) :iPedidoVenda; overload;
    function Login: String; overload;

    function Senha(Value: String) :iPedidoVenda; overload;
    function Senha: String; overload;

    function Open(aTabela : string; aDataSource : TDataSource):iPedidoVenda; overload;
    function getUsuario(aCodigo:integer; aLogin: string):iPedidoVenda; overload;

  end;


implementation

